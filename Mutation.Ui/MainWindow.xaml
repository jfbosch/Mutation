<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="Mutation.Ui.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Mutation.Ui"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="Mutation.Ui">

    <Window.SystemBackdrop>
        <MicaBackdrop />
    </Window.SystemBackdrop>

    <Grid Padding="12">
        <TabView>
            <TabViewItem Header="OCR">
                <StackPanel Spacing="8">
                    <Button x:Name="btnOcr" Content="Capture and OCR" Width="150" />
                    <TextBox x:Name="txtOcr" AcceptsReturn="True" TextWrapping="Wrap" Height="200"/>
                </StackPanel>
            </TabViewItem>
            <TabViewItem Header="Dictation">
                <StackPanel Spacing="8">
                    <Button x:Name="btnRecord" Content="Record" Width="100" />
                    <TextBox x:Name="txtSpeechToText" AcceptsReturn="True" TextWrapping="Wrap" Height="200"/>
                </StackPanel>
            </TabViewItem>
        </TabView>
    </Grid>
  </Window>
